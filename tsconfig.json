{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2020",
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist"],
  "files": ["src/main.ts"],
  "paths": {
    "@domain/*": ["./src/domain/*"],
    "@infrastructure/*": ["./src/infrastructure/*"]
  }
}
